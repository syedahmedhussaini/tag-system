each category in colorCategories
  .mb-6
    h4.font-headline.text-80.font-bold.text-lg= category.name
    .flex.flex-row.flex-wrap
        each color in category.colors
          .p-6.bg-white.border-2.border-grey-60.m-2.w-full.rounded-sm(class='md:w-1/4 hover:border-grey-100')
            .flex.flex-row.items-center.mb-2
              .block.w-12.h-12.rounded-full.mr-2(style=`background: ${color.value}; border: 4px solid rgba(0,0,0,0.3);`)
              .font-body.text-xs.font-bold= color.value
            .font-headline.font-bold.text-lg.text-80= color.name
